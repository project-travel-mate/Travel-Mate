<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_car_directions"
    tools:context="tie.hackathon.travelguide.CarDirections">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/map"
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

<TextView
    android:layout_marginTop="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Travel Cost"
    android:textStyle="bold"
    android:textSize="18sp"
    android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="#c7cfcecf"
        android:orientation="vertical"/>
    <GridLayout
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_weight="1.0"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="5"
        android:orientation="horizontal"
        tools:context=".GridXMLActivity" >
        <TextView
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_weight="1.0"
            android:layout_gravity="fill_horizontal"
            android:textSize="15sp"
            android:text=""/>

        <TextView
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_weight="1.0"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:textSize="15sp"
            android:text="@string/car1"/>
        <TextView
            android:textStyle="bold"
            android:layout_weight="1.0"
            android:layout_column="2"
            android:layout_row="0"
            android:padding="10dp"
            android:layout_gravity="fill_horizontal"
            android:textSize="15sp"
            android:text="@string/car2"/>

        <TextView
            android:textStyle="bold"
            android:layout_column="3"
            android:layout_row="0"
            android:padding="10dp"
            android:layout_weight="1.0"
            android:layout_gravity="fill_horizontal"
            android:textSize="15sp"
            android:text="@string/car3"/>



        <TextView
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_weight="1.0"
            android:layout_gravity="fill_horizontal"
            android:textSize="15sp"
            android:text="Mileage"/>

        <TextView
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_weight="1.0"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1"
            android:textSize="15sp"
            android:text="22"/>
        <TextView
            android:textStyle="bold"
            android:layout_weight="1.0"
            android:layout_column="2"
            android:layout_row="1"
            android:padding="10dp"
            android:layout_gravity="fill_horizontal"
            android:textSize="15sp"
            android:text="18"/>

        <TextView
            android:textStyle="bold"
            android:layout_column="3"
            android:layout_row="1"
            android:padding="10dp"
            android:layout_weight="1.0"
            android:layout_gravity="fill_horizontal"
            android:textSize="15sp"
            android:text="16"/>




        <TextView
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_weight="1.0"
            android:layout_gravity="fill_horizontal"
            android:textSize="15sp"
            android:text="Travel Cost"/>

        <TextView
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_weight="1.0"
            android:id="@+id/travelcost1"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2"
            android:textSize="15sp"
            android:text="@string/car1"/>
        <TextView
            android:textStyle="bold"
            android:layout_weight="1.0"
            android:layout_column="2"
            android:layout_row="2"
            android:padding="10dp"
            android:id="@+id/travelcost2"
            android:layout_gravity="fill_horizontal"
            android:textSize="15sp"
            android:text="@string/car2"/>

        <TextView
            android:textStyle="bold"
            android:layout_column="3"
            android:layout_row="2"
            android:padding="10dp"
            android:id="@+id/travelcost3"
            android:layout_weight="1.0"
            android:layout_gravity="fill_horizontal"
            android:textSize="15sp"
            android:text="@string/car3"/>

        <TextView
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_weight="1.0"
            android:layout_gravity="fill_horizontal"
            android:textSize="15sp"
            android:text="Toll "/>

        <TextView
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_weight="1.0"
            android:id="@+id/toll1"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:textSize="15sp"
            android:text="..."/>
        <TextView
            android:textStyle="bold"
            android:layout_weight="1.0"
            android:id="@+id/toll2"
            android:layout_column="2"
            android:layout_row="3"
            android:padding="10dp"
            android:layout_gravity="fill_horizontal"
            android:textSize="15sp"
            android:text="..."/>

        <TextView
            android:textStyle="bold"
            android:layout_column="3"
            android:id="@+id/toll3"
            android:layout_row="3"
            android:padding="10dp"
            android:layout_weight="1.0"
            android:layout_gravity="fill_horizontal"
            android:textSize="15sp"
            android:text="..."/>


        <TextView
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_column="0"
            android:id="@+id/total1"
            android:layout_row="4"
            android:layout_weight="1.0"
            android:layout_gravity="fill_horizontal"
            android:textSize="15sp"
            android:text="Total Cost "/>

        <TextView
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_weight="1.0"
            android:id="@+id/total2"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="4"
            android:textSize="15sp"
            android:text="..."/>
        <TextView
            android:textStyle="bold"
            android:layout_weight="1.0"
            android:id="@+id/total3"
            android:layout_column="2"
            android:layout_row="4"
            android:padding="10dp"
            android:layout_gravity="fill_horizontal"
            android:textSize="15sp"
            android:text="..."/>

        <TextView
            android:textStyle="bold"
            android:layout_column="3"
            android:layout_row="4"
            android:padding="10dp"
            android:layout_weight="1.0"
            android:layout_gravity="fill_horizontal"
            android:textSize="15sp"
            android:text="..."/>


    </GridLayout>


</LinearLayout>
